<TaskControl>
  canvas:
    Color:
      rgb: 0.3, 0.3, 0.3
    Rectangle:
      pos: self.pos 
      size: self.width, self.height
  orientation: 'horizontal'
  padding: 10
  spacing: 10
  id: taskControl
  ScrollView:
    id: scrolling
    do_scroll_y: True
    scroll_y: 0
    scroll_type: ['bars', 'content']
    bar_width: 15
    pos: [0, 0]
    size_hint_x: 0.4
    TreeView:
      id: experimentRecords
      hide_root: True
      size_hint: 1, None
  BoxLayout:
    orientation: 'vertical'
    padding: 20
    spacing: 20
	size_hint_x: 0.6
	GridLayout:
	  cols:2
	  Label:
		text: "Task: "
	  Label:
		id: taskName
        text: ""
	GridLayout:
	  cols:2
	  spacing: 10
      padding: 10
	  Label:
        text: "Subject"	
      TextInput:
		hint_text: "Subject ID"
		size_hint_y: 0.5
    	multiline: False
        on_text_validate: taskControl.setSubjectName(self.text) 
	Label:
	  text: "Configuration File"
	GridLayout:
	  cols: 2
	  spacing: 20
      padding: 10
      TextInput:
        id: configFileText
        size_hint_x: 0.75
		size_hint_y: 0.8
        hint_text: "<PATH_TO/CONFIG_FILE>"
		multiline: False
	  Button:
		size_hint_x: 0.2
		size_hint_y: 0.8
		text: "../"
		id: configFileChooser
        on_press: taskControl.chooseConfigFile()
	Label:
	  text: "Data Recording"
    GridLayout:
      cols: 3
	  spacing: 20
	  padding: 10
      TextInput:
        id: saveDirText
        size_hint_x: 0.6
		size_hint_y: 0.8
		hint_text: "<PATH_TO/SAVE_DIR>"
        multiline: False
		disabled: not recordData.active
	  Button:
		size_hint_x: 0.2
		size_hint_y: 0.8
		text: "../"
		id: saveFileDir
		on_press: taskControl.chooseSaveDir() 
        disabled: not recordData.active
	  Switch:
		size_hint_x: 0.2
		size_hint_y: 0.8
        id: recordData
        active: False

	Button:
	  text: "Start"
      on_release: taskControl.startSM()
    Button:
      text: "Stop"
      on_release: taskControl.stopSM()
